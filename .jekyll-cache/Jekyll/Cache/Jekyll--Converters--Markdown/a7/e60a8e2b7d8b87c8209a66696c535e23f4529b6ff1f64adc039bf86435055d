  <span class="c">/* Text color */</span>
  <span class="nl">color</span><span class="p">:</span> <span class="no">white</span><span class="p">;</span>

  <span class="c">/* A font family name and a generic family name */</span>
  <span class="nl">font-family</span><span class="p">:</span> <span class="n">Gill</span> <span class="n">Sans</span> <span class="n">Extrabold</span><span class="p">,</span> <span class="nb">sans-serif</span><span class="p">;</span>

  <span class="nl">text-align</span><span class="p">:</span><span class="nb">center</span><span class="p">;</span>

  <span class="nl">width</span><span class="p">:</span> <span class="m">200px</span><span class="p">;</span>
  <span class="nl">width</span><span class="p">:</span> <span class="m">30%</span><span class="p">;</span>

  <span class="c">/* Apply to all four sides */</span>
